# ARC Crowdsourcing Platform Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=arc_crowdsourcing
DB_USER=postgres
DB_PASSWORD=YOUR_PASSWORD_HERE

# Security (generate secure random strings for production)
SESSION_SECRET=your_session_secret_here_make_it_long_and_random
JWT_SECRET=your_jwt_secret_here_also_long_and_random

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SUBMISSION_RATE_LIMIT_WINDOW_MS=300000
SUBMISSION_RATE_LIMIT_MAX=10

